// Only change code below this line
function updateRecords(id, prop, value) {
  var trackExists = collection.hasOwnProperty["tracks"];
  var accessObject= collection[id];
  var tracks;
  //console.log(accessObject);

  if(value == ""){
    delete collection[prop];
  } else if(value !== "" || prop == "tracks"){
    if(trackExists == false){
      tracks = [] //create property- object.id
      //create new track value (array) for that property by adding value to end of track value (array)
    }
  } 
    
  return collection;
}

updateRecords(5439, "artist", "ABBA");
